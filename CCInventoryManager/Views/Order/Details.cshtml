@model CCInventoryManager.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Order</legend>

    <div class="itemrow">
        <strong>Customer ID: </strong>
        @Html.DisplayFor(model => model.Customer.ID)
    </div>
    <div class="itemrow">
        <strong>First Name: </strong>
        @Html.DisplayFor(model => model.Customer.FirstName)
    </div>
    <div class="itemrow">
        <strong>Last Name: </strong>
        @Html.DisplayFor(model => model.Customer.LastName)
    </div>
    <div class="itemrow">
        <strong>Shipping Company: </strong>
        @Html.DisplayFor(model => model.Shipper.Name)
    </div>
    <div class="itemrow">
        <strong>Payment Method: </strong>
        @Html.DisplayFor(model => model.PaymentInfo.Method)
    </div>
</fieldset>

@Html.Partial("_ListOrderItems")
@Html.Partial("_AddOrderItem", new CCInventoryManager.Models.OrderItem())

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

